# flexible approach to user-specific paths
if [[ -f "$HOME/.mypaths" ]]; then
	export PATH="${PATH}$(grep -v '^#' "$HOME/.mypaths" |
	while read line; do
		echo -n ":$line" 
	done)"
fi

